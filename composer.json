{
    "name": "beastbytes/yii-middleware",
    "description": "PSR15 middleware classes for Yii3 ",
    "keywords": [
        "yii3",
        "extension",
        "user"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "httpsoft/http-message": "^1.0",
        "psr/http-message": "^1.0",
        "psr/http-server-handler": "^1.0",
        "yiisoft/router": "^3.0",
        "yiisoft/router-fastroute": "^3.0",
        "yiisoft/session": "^2.0",
        "yiisoft/user": "^2.0"

    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "roave/infection-static-analysis-plugin": "^1.7",
        "roave/security-advisories": "dev-latest",
        "vimeo/psalm": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "BeastBytes\\Yii\\Middleware\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BeastBytes\\Yii\\Middleware\\Tests\\": "tests"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "config-plugin-file": "config.php",
        "installer-paths": {
            "./node_modules/{$name}": [
                "type:npm-asset"
            ]
        },
        "installer-types": [
            "npm-asset"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "yiisoft/config": true,
            "infection/extension-installer": true,
            "codeception/c3": true
        }
    },
    "scripts": {
        "serve-backend": "php -c /etc/php/8.2/cli/php.ini -S localhost:8000 -t public_html/backend",
        "serve-frontend": "php -c /etc/php/8.2/cli/php.ini -S localhost:8000 -t public_html"
    }
}
